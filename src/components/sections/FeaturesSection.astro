---
import { Image } from 'astro:assets';
import Container from '../ui/Container.astro';

// Import feature screenshots
import zenModeDark from '../../assets/screenshots/dark-mode/dark-10-zen-mode.png';
import chaptersDark from '../../assets/screenshots/dark-mode/dark-05-chapters-overview.png';
import statsDark from '../../assets/screenshots/dark-mode/dark-07-stats-all-time.png';
---

<section id="features" class="py-32 bg-black">
  <Container>
    
    <!-- Section Header -->
    <div class="text-center mb-20">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-medium text-white mb-6">
        Made for writers
      </h2>
      
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Three features that help you focus on what matters: your story.
      </p>
    </div>

    <!-- Features List -->
    <div class="space-y-24">
      
      <!-- Feature 1: Zen Mode -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h3 class="text-3xl font-medium text-white mb-4">
            Distraction-free writing
          </h3>
          
          <p class="text-lg text-gray-400 mb-8">
            Enter zen mode and disappear into your story. No toolbars, menus, or notifications. Just you and your words.
          </p>
          
          <div class="space-y-3 text-gray-300">
            <div class="flex items-center">
              <div class="w-1 h-1 bg-white rounded-full mr-3"></div>
              <span>Full-screen writing mode</span>
            </div>
            <div class="flex items-center">
              <div class="w-1 h-1 bg-white rounded-full mr-3"></div>
              <span>Zero UI distractions</span>
            </div>
            <div class="flex items-center">
              <div class="w-1 h-1 bg-white rounded-full mr-3"></div>
              <span>Focus on your story</span>
            </div>
          </div>
        </div>
        
        <div>
          <div class="relative overflow-hidden rounded-lg border border-gray-800">
            <Image
              src={zenModeDark}
              alt="Zeyn zen mode interface"
              class="w-full h-auto"
              widths={[400, 600, 800]}
              sizes="(max-width: 1024px) 400px, 600px"
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>
      </div>

      <!-- Feature 2: Chapter Organization -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="order-2 lg:order-1">
          <div class="relative overflow-hidden rounded-lg border border-gray-800">
            <Image
              src={chaptersDark}
              alt="Zeyn chapter organization"
              class="w-full h-auto"
              widths={[400, 600, 800]}
              sizes="(max-width: 1024px) 400px, 600px"
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>
        
        <div class="order-1 lg:order-2">
          <h3 class="text-3xl font-medium text-white mb-4">
            Novel organization
          </h3>
          
          <p class="text-lg text-gray-400 mb-8">
            Structure your story like a film. Drag chapters, see your progress, and navigate instantly to any scene.
          </p>
          
          <div class="space-y-3 text-gray-300">
            <div class="flex items-center">
              <div class="w-1 h-1 bg-white rounded-full mr-3"></div>
              <span>Visual chapter overview</span>
            </div>
            <div class="flex items-center">
              <div class="w-1 h-1 bg-white rounded-full mr-3"></div>
              <span>Drag and drop reordering</span>
            </div>
            <div class="flex items-center">
              <div class="w-1 h-1 bg-white rounded-full mr-3"></div>
              <span>Quick navigation</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 3: Progress Tracking -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h3 class="text-3xl font-medium text-white mb-4">
            Progress tracking
          </h3>
          
          <p class="text-lg text-gray-400 mb-8">
            See your daily word counts, track your writing streaks, and watch your novel grow day by day.
          </p>
          
          <div class="space-y-3 text-gray-300">
            <div class="flex items-center">
              <div class="w-1 h-1 bg-white rounded-full mr-3"></div>
              <span>Daily word goals</span>
            </div>
            <div class="flex items-center">
              <div class="w-1 h-1 bg-white rounded-full mr-3"></div>
              <span>Writing streaks</span>
            </div>
            <div class="flex items-center">
              <div class="w-1 h-1 bg-white rounded-full mr-3"></div>
              <span>Completion tracking</span>
            </div>
          </div>
        </div>
        
        <div>
          <div class="relative overflow-hidden rounded-lg border border-gray-800">
            <Image
              src={statsDark}
              alt="Zeyn progress tracking dashboard"
              class="w-full h-auto"
              widths={[400, 600, 800]}
              sizes="(max-width: 1024px) 400px, 600px"
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>
      </div>

    </div>

    <!-- Call to Action -->
    <div class="text-center mt-32">
      <h3 class="text-3xl font-medium text-white mb-4">
        Start writing your novel today
      </h3>
      <p class="text-lg text-gray-400 mb-8">
        Join writers who chose focus over features.
      </p>
      <a href="#hero" class="inline-flex items-center px-6 py-3 bg-white text-black hover:bg-gray-100 transition-colors font-medium rounded">
        Get early access
        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a>
    </div>

  </Container>
</section>
---
import Container from '../ui/Container.astro';
---

<section id="integrations" class="py-16 bg-black">
  <Container>
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-medium text-white mb-6">
        Works with your tools
      </h2>
      
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Seamlessly integrate with the platforms and services you already use.
      </p>
    </div>

    <!-- Integration Categories - Minimal design -->
    <div class="space-y-16">
      
      <!-- Export & Publishing -->
      <div>
        <h3 class="text-2xl font-medium text-white text-center mb-8">
          Export & Publishing
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 text-center max-w-4xl mx-auto">
          <div class="text-gray-400 text-sm">Microsoft Word</div>
          <div class="text-gray-400 text-sm">PDF Export</div>
          <div class="text-gray-400 text-sm">EPUB</div>
          <div class="text-gray-400 text-sm">Kindle Direct</div>
          <div class="text-gray-400 text-sm">Markdown</div>
          <div class="text-gray-400 text-sm">LaTeX</div>
        </div>
      </div>

      <!-- Cloud Storage -->
      <div>
        <h3 class="text-2xl font-medium text-white text-center mb-8">
          Cloud Storage & Backup
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center max-w-2xl mx-auto">
          <div class="text-gray-400 text-sm">Google Drive</div>
          <div class="text-gray-400 text-sm">Dropbox</div>
          <div class="text-gray-400 text-sm">OneDrive</div>
          <div class="text-gray-400 text-sm">iCloud</div>
        </div>
      </div>

      <!-- Writing Communities -->
      <div>
        <h3 class="text-2xl font-medium text-white text-center mb-8">
          Writing Communities
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center max-w-xl mx-auto">
          <div class="text-gray-400 text-sm">Critique Circle</div>
          <div class="text-gray-400 text-sm">Scribophile</div>
          <div class="text-gray-400 text-sm">WriteOn</div>
        </div>
      </div>

    </div>

    <!-- Integration Features - Simplified -->
    <div class="mt-16 max-w-3xl mx-auto">
      <div class="space-y-6">
        
        <div class="text-center border-b border-gray-800 pb-6">
          <h4 class="text-lg font-medium text-white mb-2">One-Click Export</h4>
          <p class="text-gray-400 text-sm">
            Export your manuscript to any format with custom styling and formatting options.
          </p>
        </div>

        <div class="text-center border-b border-gray-800 pb-6">
          <h4 class="text-lg font-medium text-white mb-2">Auto-Sync</h4>
          <p class="text-gray-400 text-sm">
            Keep your work synchronized across all devices and cloud storage platforms.
          </p>
        </div>

        <div class="text-center pb-6">
          <h4 class="text-lg font-medium text-white mb-2">Secure Sharing</h4>
          <p class="text-gray-400 text-sm">
            Share drafts securely with beta readers, editors, and writing communities.
          </p>
        </div>

      </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16">
      <h3 class="text-3xl font-medium text-white mb-4">
        Ready to connect your workflow?
      </h3>
      <p class="text-lg text-gray-400 mb-8">
        Import your existing work and start writing with all your favorite tools integrated.
      </p>
      <a href="#hero" class="inline-flex items-center px-8 py-3 bg-white text-black hover:bg-gray-100 transition-colors font-medium rounded">
        Start free trial
        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a>
    </div>

  </Container>
</section>
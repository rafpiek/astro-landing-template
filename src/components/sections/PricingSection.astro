---
import Container from '../ui/Container.astro';
---

<section id="pricing" class="py-16 bg-black">
  <Container>
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-medium text-white mb-6">
        Simple, honest pricing
      </h2>
      
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Choose the plan that works for your writing goals. Upgrade or downgrade at any time.
      </p>
    </div>

    <!-- Pricing Cards - Minimal black design -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-16">
      
      <!-- Free Plan -->
      <div class="text-center">
        <div class="mb-6">
          <h3 class="text-xl font-medium text-white mb-2">Starter</h3>
          <div class="flex items-baseline justify-center mb-4">
            <span class="text-4xl font-medium text-white">Free</span>
          </div>
          <p class="text-gray-400 text-sm">Perfect for getting started with your first novel.</p>
        </div>

        <ul class="space-y-2 mb-8 text-sm">
          <li class="text-gray-400">1 project</li>
          <li class="text-gray-400">Basic writing tools</li>
          <li class="text-gray-400">Local storage</li>
          <li class="text-gray-400">Export to PDF/Word</li>
        </ul>

        <a href="#" class="inline-flex items-center px-6 py-3 border border-gray-600 text-white hover:bg-gray-800 transition-colors font-medium rounded text-sm">
          Get started free
        </a>
      </div>

      <!-- Pro Plan -->
      <div class="text-center relative">
        <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
          <span class="px-3 py-1 text-xs text-black bg-white rounded-full font-medium">Most Popular</span>
        </div>
        
        <div class="mb-6">
          <h3 class="text-xl font-medium text-white mb-2">Professional</h3>
          <div class="flex items-baseline justify-center mb-4">
            <span class="text-4xl font-medium text-white">$12</span>
            <span class="text-lg text-gray-400 ml-1">/month</span>
          </div>
          <p class="text-gray-400 text-sm">Everything you need to write and publish your novels.</p>
        </div>

        <ul class="space-y-2 mb-8 text-sm">
          <li class="text-gray-400">Unlimited projects</li>
          <li class="text-gray-400">Cloud sync & backup</li>
          <li class="text-gray-400">Advanced writing stats</li>
          <li class="text-gray-400">Goal tracking & rewards</li>
          <li class="text-gray-400">Multiple export formats</li>
          <li class="text-gray-400">Priority support</li>
        </ul>

        <a href="#" class="inline-flex items-center px-6 py-3 bg-white text-black hover:bg-gray-100 transition-colors font-medium rounded text-sm">
          Start 14-day free trial
        </a>
      </div>

      <!-- Team Plan -->
      <div class="text-center">
        <div class="mb-6">
          <h3 class="text-xl font-medium text-white mb-2">Team</h3>
          <div class="flex items-baseline justify-center mb-4">
            <span class="text-4xl font-medium text-white">$24</span>
            <span class="text-lg text-gray-400 ml-1">/month</span>
          </div>
          <p class="text-gray-400 text-sm">Collaborative writing for writing groups and co-authors.</p>
        </div>

        <ul class="space-y-2 mb-8 text-sm">
          <li class="text-gray-400">Everything in Professional</li>
          <li class="text-gray-400">Up to 5 collaborators</li>
          <li class="text-gray-400">Real-time collaboration</li>
          <li class="text-gray-400">Comments & suggestions</li>
          <li class="text-gray-400">Version history</li>
          <li class="text-gray-400">Team analytics</li>
        </ul>

        <a href="#" class="inline-flex items-center px-6 py-3 border border-gray-600 text-white hover:bg-gray-800 transition-colors font-medium rounded text-sm">
          Start team trial
        </a>
      </div>

    </div>

    <!-- Simple feature comparison -->
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-8">
        <h3 class="text-2xl font-medium text-white mb-6">
          Compare plans
        </h3>
      </div>
      
      <div class="space-y-4 text-sm">
        <div class="grid grid-cols-4 gap-4 py-3 border-b border-gray-800">
          <div class="text-white font-medium">Features</div>
          <div class="text-center text-gray-400">Starter</div>
          <div class="text-center text-gray-400">Professional</div>
          <div class="text-center text-gray-400">Team</div>
        </div>
        
        <div class="grid grid-cols-4 gap-4 py-3 border-b border-gray-800">
          <div class="text-gray-400">Number of projects</div>
          <div class="text-center text-gray-500">1</div>
          <div class="text-center text-gray-400">Unlimited</div>
          <div class="text-center text-gray-400">Unlimited</div>
        </div>
        
        <div class="grid grid-cols-4 gap-4 py-3 border-b border-gray-800">
          <div class="text-gray-400">Cloud sync & backup</div>
          <div class="text-center text-gray-500">-</div>
          <div class="text-center text-gray-400">✓</div>
          <div class="text-center text-gray-400">✓</div>
        </div>
        
        <div class="grid grid-cols-4 gap-4 py-3 border-b border-gray-800">
          <div class="text-gray-400">Advanced statistics</div>
          <div class="text-center text-gray-500">-</div>
          <div class="text-center text-gray-400">✓</div>
          <div class="text-center text-gray-400">✓</div>
        </div>
        
        <div class="grid grid-cols-4 gap-4 py-3">
          <div class="text-gray-400">Collaboration</div>
          <div class="text-center text-gray-500">-</div>
          <div class="text-center text-gray-500">-</div>
          <div class="text-center text-gray-400">✓</div>
        </div>
      </div>
    </div>

  </Container>
</section>
---
import Container from '../ui/Container.astro';
---

<section id="stats" class="py-16 bg-black">
  <Container>
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-medium text-white mb-6">
        Trusted by writers worldwide
      </h2>
      
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Join a growing community of authors who have chosen to focus on their craft.
      </p>
    </div>

    <!-- Stats Grid - Minimal design -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 mb-16 max-w-4xl mx-auto">
      
      <!-- Stat 1: Active Writers -->
      <div class="text-center">
        <div class="text-4xl lg:text-5xl font-medium text-white mb-2">
          <span id="counter1">25,000</span>+
        </div>
        <div class="text-gray-400 text-sm">Active Writers</div>
      </div>

      <!-- Stat 2: Words Written -->
      <div class="text-center">
        <div class="text-4xl lg:text-5xl font-medium text-white mb-2">
          <span id="counter2">15.2</span>M
        </div>
        <div class="text-gray-400 text-sm">Words Written</div>
      </div>

      <!-- Stat 3: Novels Completed -->
      <div class="text-center">
        <div class="text-4xl lg:text-5xl font-medium text-white mb-2">
          <span id="counter3">1,250</span>+
        </div>
        <div class="text-gray-400 text-sm">Novels Completed</div>
      </div>

      <!-- Stat 4: Daily Active Users -->
      <div class="text-center">
        <div class="text-4xl lg:text-5xl font-medium text-white mb-2">
          <span id="counter4">8,500</span>+
        </div>
        <div class="text-gray-400 text-sm">Daily Writers</div>
      </div>

    </div>

    <!-- Additional Simple Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16 max-w-2xl mx-auto">
      
      <div class="text-center">
        <div class="text-2xl font-medium text-white mb-2">
          <span id="counter5">42</span> min
        </div>
        <div class="text-gray-400 text-sm">Average session</div>
      </div>

      <div class="text-center">
        <div class="text-2xl font-medium text-white mb-2">
          <span id="counter6">127</span> days
        </div>
        <div class="text-gray-400 text-sm">Longest streak</div>
      </div>

      <div class="text-center">
        <div class="text-2xl font-medium text-white mb-2">
          <span id="counter7">89</span>
        </div>
        <div class="text-gray-400 text-sm">Countries</div>
      </div>

    </div>

    <!-- Success Stories - Minimal -->
    <div class="max-w-3xl mx-auto space-y-6">
      
      <div class="text-center border-b border-gray-800 pb-6">
        <p class="text-gray-400 leading-relaxed">
          "My novel reached #1 on Amazon in its category after I rewrote it completely in Zeyn. 
          The focused environment helped me find my voice."
        </p>
        <div class="text-gray-500 text-sm mt-3">Sarah M., Fantasy Author</div>
      </div>

      <div class="text-center border-b border-gray-800 pb-6">
        <p class="text-gray-400 leading-relaxed">
          "Signed with a major publisher after finishing my manuscript in Zeyn. 
          The chapter organization made pitching so much easier."
        </p>
        <div class="text-gray-500 text-sm mt-3">Marcus C., Thriller Novelist</div>
      </div>

      <div class="text-center pb-6">
        <p class="text-gray-400 leading-relaxed">
          "Wrote my entire first draft in 30 days using Zeyn's goal tracking. 
          The progress visualization kept me motivated every single day."
        </p>
        <div class="text-gray-500 text-sm mt-3">Elena R., Romance Author</div>
      </div>

    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16">
      <h3 class="text-3xl font-medium text-white mb-4">
        Ready to join them?
      </h3>
      <p class="text-lg text-gray-400 mb-8">
        Start your writing journey with thousands of successful authors.
      </p>
      <a href="#hero" class="inline-flex items-center px-8 py-3 bg-white text-black hover:bg-gray-100 transition-colors font-medium rounded">
        Start writing for free
        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a>
    </div>

  </Container>
</section>

<script>
  // Counter animation function
  function animateCounter(id: string, target: number, duration = 2000, suffix = '') {
    const element = document.getElementById(id);
    if (!element) return;

    const startValue = 0;
    const increment = target / (duration / 16); // 60fps
    let current = startValue;

    const timer = setInterval(() => {
      current += increment;
      if (current >= target) {
        current = target;
        clearInterval(timer);
      }

      // Format the number
      let displayValue;
      if (target >= 1000000) {
        displayValue = (current / 1000000).toFixed(1);
        element.textContent = displayValue + suffix;
      } else if (target >= 1000) {
        displayValue = (current / 1000).toFixed(current >= 1000 ? 1 : 0);
        element.textContent = displayValue + (suffix || 'K');
      } else {
        element.textContent = Math.round(current) + suffix;
      }
    }, 16);
  }

  // Intersection Observer for scroll-triggered animations
  const observerOptions = {
    threshold: 0.5,
    rootMargin: '0px 0px -100px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        // Trigger counter animations
        setTimeout(() => animateCounter('counter1', 25000, 2000), 0);
        setTimeout(() => animateCounter('counter2', 15.2, 2000, 'M'), 300);
        setTimeout(() => animateCounter('counter3', 1250, 2000), 600);
        setTimeout(() => animateCounter('counter4', 8500, 2000), 900);
        setTimeout(() => animateCounter('counter5', 42, 1500), 1200);
        setTimeout(() => animateCounter('counter6', 127, 1500), 1400);
        setTimeout(() => animateCounter('counter7', 89, 1500), 1600);
        
        observer.disconnect(); // Only animate once
      }
    });
  }, observerOptions);

  // Observe the stats section
  document.addEventListener('DOMContentLoaded', () => {
    const statsSection = document.getElementById('stats');
    if (statsSection) {
      observer.observe(statsSection);
    }
  });
</script>
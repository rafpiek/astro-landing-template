---
import Container from '../ui/Container.astro';
---

<section id="testimonials" class="py-16 bg-black">
  <Container>
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-medium text-white mb-6">
        Writers love Zeyn
      </h2>
      
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Join thousands who've already discovered focused writing.
      </p>
    </div>

    <!-- Testimonials Grid - Minimal style matching original -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      
      <!-- Testimonial 1 -->
      <div class="text-center">
        <div class="mb-4">
          <div class="flex justify-center text-gray-500 mb-4">
            {[...Array(5)].map(() => (
              <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
        </div>
        
        <blockquote class="text-gray-400 text-sm mb-4 leading-relaxed">
          "Finally, a writing app that gets out of my way. Finished my novel in 3 months."
        </blockquote>
        
        <div class="text-sm">
          <div class="text-white font-medium">Sarah Mitchell</div>
          <div class="text-gray-500 text-xs">Fantasy Author</div>
        </div>
      </div>

      <!-- Testimonial 2 -->
      <div class="text-center">
        <div class="mb-4">
          <div class="flex justify-center text-gray-500 mb-4">
            {[...Array(5)].map(() => (

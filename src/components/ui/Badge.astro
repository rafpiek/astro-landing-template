---
interface Props {
  variant?: 'primary' | 'success' | 'warning' | 'info';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { 
  variant = 'primary', 
  size = 'md',
  class: className = '',
  ...props 
} = Astro.props;

const baseClasses = 'inline-flex items-center font-medium rounded-full';

const variantClasses = {
  primary: 'bg-primary-blue-light text-primary-blue dark:bg-primary-blue dark:text-white',
  success: 'bg-success-green-light text-success-green dark:bg-success-green dark:text-white',
  warning: 'bg-achievement-orange-light text-achievement-orange dark:bg-achievement-orange dark:text-white',
  info: 'bg-accent-purple-light text-accent-purple dark:bg-accent-purple dark:text-white'
};

const sizeClasses = {
  sm: 'px-2 py-1 text-xs',
  md: 'px-3 py-1.5 text-sm',
  lg: 'px-4 py-2 text-base'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`.trim();
---

<span class={classes} {...props}>
  <slot />
</span>
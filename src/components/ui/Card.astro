---
interface Props {
  class?: string;
  padding?: boolean;
  hover?: boolean;
  as?: keyof HTMLElementTagNameMap;
}

const { 
  class: className = '',
  padding = true,
  hover = false,
  as: Tag = 'div',
  ...props 
} = Astro.props;

const baseClasses = 'card';
const paddingClasses = padding ? 'p-6 lg:p-8' : '';
const hoverClasses = hover ? 'hover:shadow-lg hover:-translate-y-1 transition-all duration-200 cursor-pointer' : '';

const classes = `${baseClasses} ${paddingClasses} ${hoverClasses} ${className}`.trim();
---

<Tag class={classes} {...props}>
  <slot />
</Tag>
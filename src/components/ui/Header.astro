---
import Container from './Container.astro';
import ThemeToggle from './ThemeToggle.tsx';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-black/40 backdrop-blur-lg">
  <Container>
    <div class="flex items-center justify-between h-16">
      
      <!-- Logo/Brand -->
      <a href="/" class="flex items-center group">
        <span class="text-xl font-bold text-white group-hover:text-gray-300 transition-colors duration-200">
          Zeyn
        </span>
      </a>

      <!-- Navigation & CTA -->
      <div class="flex items-center gap-8">
        
        <!-- Navigation Links -->
        <nav class="hidden md:flex items-center gap-8">
          <a href="#features" class="text-sm font-medium text-gray-400 hover:text-white transition-colors duration-200">
            Features
          </a>
          <a href="#faq" class="text-sm font-medium text-gray-400 hover:text-white transition-colors duration-200">
            FAQ
          </a>
        </nav>

        <!-- CTA Button -->
        <a 
          href="#hero" 
          class="inline-flex items-center px-4 py-2 bg-white text-black hover:bg-gray-100 text-sm font-medium transition-colors duration-200 rounded-lg"
        >
          Get Early Access
        </a>

      </div>
    </div>
  </Container>
</header>

<!-- Spacer to prevent content from hiding under fixed header -->
<div class="h-16" aria-hidden="true"></div>


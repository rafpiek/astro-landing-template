---
import Container from './Container.astro';
import LanguageSwitcher from './LanguageSwitcher.tsx';
import { t } from '../../i18n/ui';
import type { Locale } from '../../i18n/types';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;

// Get translations
const featuresText = await t(locale, 'nav.features');
const faqText = await t(locale, 'nav.faq'); 
const ctaText = await t(locale, 'nav.cta');
---

<header class="fixed top-0 left-0 right-0 z-50 bg-black/40 backdrop-blur-lg">
  <Container>
    <div class="flex items-center justify-between h-16">
      
      <!-- Logo/Brand -->
      <a href="/" class="flex items-center group">
        <span class="text-xl font-bold text-white group-hover:text-gray-300 transition-colors duration-200">
          Zeyn
        </span>
      </a>

      <!-- Navigation & CTA -->
      <div class="flex items-center gap-4">
        
        <!-- Navigation Links -->
        <nav class="hidden md:flex items-center gap-8">
          <a href="#features" class="text-sm font-medium text-gray-400 hover:text-white transition-all duration-300 tracking-wide hover:tracking-wider">
            {featuresText}
          </a>
          <a href="#faq" class="text-sm font-medium text-gray-400 hover:text-white transition-all duration-300 tracking-wide hover:tracking-wider">
            {faqText}
          </a>
        </nav>

        <!-- Language Switcher -->
        <LanguageSwitcher 
          client:load
          variant="toggle"
          size="sm"
          className="hidden sm:block"
        />

        <!-- CTA Button -->
        <a 
          href="#hero" 
          class="inline-flex items-center px-4 py-2 bg-white text-black hover:bg-gray-50 text-sm font-semibold transition-all duration-300 ease-out rounded-xl shadow-lg hover:shadow-xl hover:scale-[1.02] backdrop-blur-sm"
        >
          {ctaText}
        </a>

      </div>
    </div>
  </Container>
</header>

<!-- Spacer to prevent content from hiding under fixed header -->
<div class="h-16" aria-hidden="true"></div>

